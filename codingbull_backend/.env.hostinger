# Hostinger VPS Production Environment Configuration
# Enterprise-grade Django backend configuration with zero external dependencies
# Generated: 2025-06-27

# Django Settings - HOSTINGER VPS PRODUCTION
DJANGO_SECRET_KEY=prod-secret-key-will-be-generated-during-deployment
DJANGO_ENV=production
DJANGO_DEBUG=False
DJANGO_DEPLOYMENT_TARGET=hostinger-vps
DJANGO_HOSTING_PROVIDER=hostinger
DJANGO_INFRASTRUCTURE_TYPE=vps

# Allowed Hosts - HOSTINGER VPS NATIVE
DJANGO_ALLOWED_HOSTS=31.97.61.151,api.codingbullz.com,codingbullz.com,www.codingbullz.com,localhost,127.0.0.1

# Database Configuration - LOCAL POSTGRESQL ONLY
# Completely self-contained database on Hostinger VPS
DATABASE_URL=postgresql://bulldb:your-secure-password@localhost:5432/bulldb
DB_NAME=bulldb
DB_USER=bulldb
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True
DB_ATOMIC_REQUESTS=True
DB_AUTOCOMMIT=True

# CORS Settings - HOSTINGER VPS PRODUCTION
CORS_ALLOWED_ORIGINS_PRODUCTION=https://codingbullz.com,https://www.codingbullz.com
CORS_ALLOWED_ORIGINS_DEVELOPMENT=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False

# Security Settings - ENTERPRISE HOSTINGER VPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_FRAME_DENY=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Advanced Security Features
X_FRAME_OPTIONS=DENY
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_EXPIRE_AT_BROWSER_CLOSE=True
SESSION_COOKIE_AGE=3600

# Logging - ENTERPRISE PRODUCTION
LOG_LEVEL=WARNING
DJANGO_LOG_LEVEL=INFO
GUNICORN_LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=True
LOG_FORMAT=json
LOG_TO_CONSOLE=True
LOG_TO_FILE=True

# Email Configuration - HOSTINGER VPS
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=contact@codingbullz.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_TIMEOUT=30
DEFAULT_FROM_EMAIL=noreply@codingbullz.com

# Error Monitoring - LOCAL PREFERRED
SENTRY_DSN=your-sentry-dsn-for-production-errors
ENABLE_LOCAL_ERROR_LOGGING=True
ERROR_LOG_FILE=/home/codingbull/codingbull/logs/errors.log

# Static Files - HOSTINGER VPS LOCAL PATHS
STATIC_ROOT=/home/codingbull/codingbull/staticfiles/
MEDIA_ROOT=/home/codingbull/codingbull/media/
STATIC_URL=/static/
MEDIA_URL=/media/
STATICFILES_STORAGE=django.contrib.staticfiles.storage.ManifestStaticFilesStorage

# Cache Configuration - LOCAL REDIS
CACHE_URL=redis://localhost:6379/1
CACHE_TIMEOUT=3600
ENABLE_CACHE_VERSIONING=True
CACHE_KEY_PREFIX=codingbull_prod

# Performance Settings - HOSTINGER VPS OPTIMIZED
GUNICORN_WORKERS=auto
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2
GUNICORN_PRELOAD_APP=True

# Database Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Enterprise Features - HOSTINGER VPS NATIVE
ENABLE_API_RATE_LIMITING=True
ENABLE_REQUEST_LOGGING=True
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS_COLLECTION=True
ENABLE_AUDIT_LOGGING=True

# API Configuration
API_THROTTLE_RATE=1000/hour
API_THROTTLE_BURST=100
API_PAGINATION_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
FILE_UPLOAD_PERMISSIONS=0o644

# Timezone and Internationalization
TIME_ZONE=UTC
USE_TZ=True
USE_I18N=True
USE_L10N=True
LANGUAGE_CODE=en-us

# Hostinger VPS Specific Optimizations
ENABLE_NGINX_INTEGRATION=True
ENABLE_SYSTEMD_INTEGRATION=True
ENABLE_LOCAL_BACKUP=True
BACKUP_RETENTION_DAYS=30

# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_BASE_URL=/api
REACT_APP_API_TIMEOUT=10000

# Security Configuration
REACT_APP_CSP_NONCE=
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Analytics & Monitoring
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Contact & Support
REACT_APP_SUPPORT_EMAIL=support@codingbull.com
REACT_APP_CONTACT_EMAIL=contact@codingbull.com

# Social Media Links
REACT_APP_GITHUB_URL=https://github.com/codingbull
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/codingbull
REACT_APP_TWITTER_URL=https://twitter.com/codingbull

# Build Configuration
REACT_APP_BUILD_VERSION=1.0.0
REACT_APP_BUILD_DATE=
GENERATE_SOURCEMAP=true

# Performance Configuration
REACT_APP_LAZY_LOADING_THRESHOLD=0.1
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_CACHE_DURATION=3600

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_STORYBOOK=true
REACT_APP_MOCK_API=false

# Fallback Configuration
REACT_APP_ENABLE_MOCK_FALLBACK=true
